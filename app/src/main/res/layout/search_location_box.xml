<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picup_drop_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="10dp"
    android:background="@drawable/orange_border_white_bg_rounded_rect"
    android:orientation="horizontal"
    android:padding="10dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_pin_orange" />

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/textColor" />

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/textColor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_location_pin_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pic_address_tv"
            style="@style/searchTv"
            android:hint="@string/enter_pickup_location"
            android:onClick="openPlacePredictionCurrent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/drop_address_tv"
            style="@style/searchTv"
            android:layout_marginTop="16dp"
            android:hint="@string/enter_drop_location"
          android:onClick="openPlacePredictionDestination" />

    </LinearLayout>


</LinearLayout>






