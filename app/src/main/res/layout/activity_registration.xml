<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.laari.rider.views.activity.registration.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_boy" />


            <EditText
                android:id="@+id/firstNameEt"
                style="@style/inputBox"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:text="Najish"
                android:hint="Name " />


            <EditText
                android:id="@+id/lastNameEt"
                style="@style/inputBox"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:inputType="textCapWords"
                android:text="Farooqui"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/emailEt"
                style="@style/inputBox"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:text="najish.farooqui@gmail.com"
                android:hint="email address" />

            <EditText
                android:id="@+id/nationalIdEt"
                style="@style/inputBox"
                android:layout_marginTop="16dp"
                android:inputType="number"
                android:text="1234567890"
                android:hint="national identity number" />


            <EditText
                android:id="@+id/homeCityEt"
                style="@style/inputBox"
                android:layout_marginTop="16dp"
                android:text="Mahidpur"
                android:hint="Home City" />



            <EditText
                android:id="@+id/addressEt"
                style="@style/inputBox"
                android:layout_marginTop="16dp"
                android:text="Yashwant marg"
                android:hint="residential address" />


            <Button
                android:id="@+id/btnGoToTakePhoto"
                style="@style/main_btn_yellow"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="Continue" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>